# HTCondor submit file
executable = run.sh
request_memory = 24GB
request_disk = 24GB
request_gpus = 1
container_image = file:///staging/ksankaran/environment.sif
+WantGPULab = true
+WantFlocking = true
+WantGliding = true
+GPUJobLength = "short" 
+is_resumable = true
log = run-$(Process).log
arguments = $(Process)
error = run-$(Process).err
output = run-$(Process).out
queue